/*
 * Twitter Bootstrapで定義されているプロパティの上書き
 */

.btn
  height 25px
  padding 2px 14px 6px

.label
  text-transform none

.page-header
  margin-top 10px

/*
 * 以下、Anoside固有(?)の定義
 */

body
  padding-top 40px

ul.errors
  li
    color #9D261D

.page-header.home-header
  form
    textarea
      height 16px
      width 450px
    #create
      margin-left 7px

#timeline
  h2
    font-weight normal
    font-size 1.2em
  .body
    margin-bottom 5px
  li
    list-style-type none
    margin-bottom 10px
  .comments
    li
      margin-bottom 10px
  .tags
    ul
      margin 0

      li.tag-name
        display inline

        a
          color #ffffff
          font-size 1.3em
  .footer
    ul, li
      display inline
    .datetime, .comments-count
      margin-right 5px
    .datetime
      color #bfbfbf
    ul.menu
      display none
      margin 0

      li
        margin-right 5px
  .new-comment, .new-tag
    margin-top 5px

    button
      margin 0 7px

#explore
  ol
    li
      list-style-type none

      span.posts-count
        margin-right 10px
