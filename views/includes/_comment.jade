script(id='showCommentsTmpl', type='text/x-jquery-tmpl')
  li.comment
    .body
      {{html body}}
    .footer
      {{if isPostMaster}}
      span.identity-id.post-master
        ${identityId}
      {{else}}
      span.identity-id
        ${identityId}
      {{/if}}
      span.datetime
        ${createdAt}

script(id='newCommentFormTmpl', type='text/x-jquery-tmpl')
  .new-comment
    input(class='csrf', name='_csrf', type='hidden', value='#{csrfToken}')
    textarea.body
    button.create-comment.btn.primary 返信
    span(class='cancel mimic-links') キャンセル
