script(id='showPostsTmpl', type='text/x-jquery-tmpl')
  .post(data-post-id='${_id}')
    h2
      ${title}
    {{if body}}
    .body
      ${body}
    {{/if}}
    .tags
      {{if tagNames.length > 0}}
      {{each(i, tagName) tagNames}}
      span.tag-name.label
        a(href='/t/${tagName}') ${tagName}
      {{/each}}
      {{/if}}
    .footer
      span.datetime
        a(href='/posts/${_id}') ${createdAt}
      {{if comments.length > 0}}
      span.comments-count
        a(href='#') ${comments.length}コメント
      {{/if}}
      ul.menu
        li
          span(class='new-comment mimic-links') 返信
        li
          span(class='new-tag mimic-links') タグを追加
    ul.comments

include ./_comment
include ./_tag
